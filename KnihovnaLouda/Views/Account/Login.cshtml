@model LoginViewModel

@{
    ViewData["Title"] = "Přihlášení";
}

<h1 class="text-center">Přihlásit se</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form class="p-4 border rounded shadow-sm bg-light" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input">
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <div class="form-group text-center mb-2">
                <button type="submit" class="btn btn-primary text-center">Přihlásit se</button>
            </div>
            <div class="text-center">
            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-secondary">Registrace</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}