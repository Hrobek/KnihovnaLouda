@model KnihovnaLouda.Models.Author

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Nový autor</h1>

<div class="row justify-content-center">
	<div class="col-md-8">
		<form asp-action="Create" class="p-4 border rounded shadow-sm bg-light" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group mb-3">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group text-center">
					<input type="submit" value="Uložit" class="btn btn-primary" />
					<a asp-action="Index" class="btn btn-primary text-center">Zpět</a>
				</div>
				<div class="form-group">
					<label for="photo">Fotografie autora</label>
					<input type="file" id="photo" name="photo" class="form-control" />
				</div>
			</div>
		</form>
	</div>
</div>



